<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_gravity="center"

    android:orientation="vertical">

    <TextView
        android:id="@+id/ok_prompt_content"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/validate_popup_ok_prompt_content_marginLeft"
        android:layout_marginRight="@dimen/validate_popup_ok_prompt_content_marginRight"
        android:layout_marginTop="@dimen/validate_popup_ok_prompt_content_marginTop"
        android:background="#FFFFFF"
        android:gravity="center"
        android:padding="@dimen/validate_popup_ok_prompt_content_padding"
        android:text="Alert"
        android:textColor="#000000"
        android:textSize="@dimen/validate_popup_ok_prompt_content_padding_textSize"
        android:textStyle="bold" />
