    <View
        android:layout_width="wrap_content"
        android:layout_height="@dimen/validate_popup_horizontal_height"
        android:layout_marginLeft="@dimen/validate_popup_horizontal_marginLeft"
        android:layout_marginRight="@dimen/validate_popup_horizontal_marginRight"
        android:layout_marginTop="@dimen/validate_popup_horizontal_marginTop"
        android:background="#22000000" />
    <TextView
        android:id="@+id/ok_prompt_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/validate_popup_ok_prompt_titlel_marginLeft"
        android:layout_marginRight="@dimen/validate_popup_ok_prompt_title_marginRight"
        android:layout_marginTop="@dimen/validate_popup_ok_prompt_title_marginTop"
        android:layout_gravity="center"
        android:padding="@dimen/validate_popup_ok_prompt_title_padding"
        android:textColor="#000000"
        android:textSize="@dimen/validate_popup_ok_prompt_title_textSiz"
        android:textStyle="normal" />




