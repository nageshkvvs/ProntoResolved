    <View
        android:layout_width="fill_parent"
        android:layout_height="@dimen/validate_popup_horizontal_height"
        android:layout_marginLeft="@dimen/validate_popup_horizontal_marginLeft"
        android:layout_marginRight="@dimen/validate_popup_horizontal_marginRight"
        android:layout_marginTop="@dimen/validate_popup_horizontal_marginTop"
        android:background="#22000000" />

    <LinearLayout

        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/validate_popup_btn_ll_marginBottom"
        android:layout_marginTop="@dimen/validate_popup_btn_ll_marginTop"
        android:gravity="center"
        android:orientation="horizontal">

        <Button
            android:id="@+id/ok_prompt_btn_ok"
            android:layout_width="@dimen/validate_popup_btn_layout_width"
            android:layout_height="@dimen/validate_popup_btn_layout_height"
            android:layout_gravity="center"
            android:background="@drawable/validate_button"
            android:text="OK"
            android:textColor="#000000"
            android:textSize="@dimen/validate_popup_ok_prompt_btn_ok_textSize" />
    </LinearLayout>

</LinearLayout>
